{
  "name": "unhoc",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watchAll",
    "lint": "prettier --write '**/**/*.{ts,tsx,js,jsx}'",
    "clean": "rm -rf node_modules && yarn workspaces run clean",
    "build": "tsc --build tsconfig.build.json",
    "publish": "lerna publish prepatch --yes --loglevel=verbose --no-push --no-git-reset --no-git-tag-version --no-changelog"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@commitlint/config-lerna-scopes": "^7.3.1",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.12",
    "coveralls": "^3.0.2",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.2",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
