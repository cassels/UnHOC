{
  "name": "unhoc",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test:watch": "jest --watchAll",
    "lint": "prettier --write '**/**/*.{ts,tsx,js,jsx}'",
    "clean": "yarn run clean:lib && yarn run clean:node",
    "clean:lib": "yarn workspaces run clean:lib",
    "clean:node": "rm -rf node_modules && yarn workspaces run clean:node",
    "build": "yarn run clean:lib && tsc --build tsconfig.build.json"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.12",
    "coveralls": "^3.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lerna": "^3.10.7",
    "prettier": "^1.15.3",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
